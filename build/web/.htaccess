<IfModule mod_rewrite.c>
  RewriteEngine On

  # Ensure Apache serves Flutter's index.html (avoid preferring index.php).
  DirectoryIndex index.html

  # Flutter web deep-link support (SPA): route everything to index.html
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  RewriteRule ^ index.html [L]
</IfModule>
